<Window x:Class="Kitness.Information"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kitness"
        mc:Ignorable="d" 
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        Title="Kitness_Information" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.5*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="0.5*"/>
        </Grid.ColumnDefinitions>
        <Image Stretch="Uniform" Source="image/guide/information.png" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Column="1"/>
    </Grid>
</Window>
